@model IEnumerable<Sant01.Models.Employee>
@{
    ViewData["Title"] = "Employee";
}

    <div class="row d-flex justify-content-around">
        <a class="col-xs-12 col-md-5 my-3 btn btn-outline-primary rounded display-4 py-4" asp-controller="Employee" asp-action="Create">Add new employee</a>
    </div>

    <div>
        <h3 class="text-center my-3">Employee list</h3>
        <form asp-action="Index" method="get">
            <div class="form-actions no-color">
                <p>
                    Filter by status: <select name="statusFilter" asp-items="Html.GetEnumSelectList<Sant01.Data.Enum.EmployeeStatus>()" value="@ViewData["StatusFilter"]">
                    </select>
                    <input type="submit" value="filter" class="btn btn-primary" /> |
                    <a asp-action="Index">Back to Full List</a>
                </p>
            </div>
        </form>
        <table class="table table-striped">
            <thead class="thead-dark text-light">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Surename)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DOB)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PersonIdentificationCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Surename)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DOB)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PersonIdentificationCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @if (item.Status == Sant01.Data.Enum.EmployeeStatus.Active)
                            {
                                <p>Active</p>
                            }
                            else
                            {
                                <p>Inactive</p>
                            }
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
